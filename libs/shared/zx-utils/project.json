{
  "name": "zx-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/zx-utils/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/shared/zx-utils/**/*.mts"
        ]
      },
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "outputPath": "dist/libs/shared/zx-utils",
        "main": "libs/shared/zx-utils/src/index.mjs",
        "tsConfig": "libs/shared/zx-utils/tsconfig.lib.json",
        "assets": ["libs/shared/zx-utils/*.md"],
        "bundle": true,
        "deleteOutputPath": true,
        "thirdParty": false
      },
      "cache": true,
      "esbuildOptions": {
        "target": "es2020",
        "format": "cjs",
        "platform": "node",
        "external": ["deno", "zx", "pg-hstore", "morgan", "express", "express-async-errors", "express-jwt", "jsonwebtoken",
    "bcryptjs", "cors", "helmet", "cookie-parser", "cookie-signature","node:*","fsevents", "config"]
      }
    }
  }
}
