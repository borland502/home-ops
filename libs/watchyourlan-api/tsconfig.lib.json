{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "types": ["node"]
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.mts"]
}
