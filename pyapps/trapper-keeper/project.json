{
  "name": "trapper-keeper",
  "$schema": "./node_modules/@nxlv/python/schema.json",
  "projectType": "application",
  "sourceRoot": "pyapps/trapper-keeper/trapper_keeper",
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  },
  "tags": [],
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "pyapps/trapper-keeper"
      },
      "cache": true
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "dependsOn": ["^lint","^lock", "^install"],
      "options": {
        "outputPath": "pyapps/trapper-keeper/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      },
      "dependsOn": ["^lock"],
      "cache": true
    },
    "pack": {
      "command": "task pya:tk:run -- pack",
      "dependsOn": ["^build", "^lint", "^test", "^install"]
    },
    "test": {
      "command": "poetry run python -m unittest discover",
      "options": {
        "cwd": "pyapps/trapper-keeper"
      },
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": [
          "trapper_keeper",
          "tests"
        ]
      },
      "cache": true
    }
  }
}

