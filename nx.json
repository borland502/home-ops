{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.stylelintrc(.(json|yml|yaml|js))?"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "neverConnectToCloud": true,
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": ["apps/watchyourlan-api-e2e/**/*"]
    }
  ],
  "targetDefaults": {
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": ["default"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "command": "node --experimental-vm-modules --no-warnings --enable-source-maps --loader ts-node/esm ../../node_modules/jest/bin/jest.js"
      },
      "cache": true
    },
    "lint": {
      "cache": true,
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/**/*.mts"],
        "fix": true,
        "eslintConfig": "package.json"
      },
      "dependsOn": ["^build"]
    },
    "stylelint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.stylelintrc(.(json|yml|yaml|js))?"
      ],
      "cache": true
    }
  }
}
