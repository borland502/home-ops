{
  "root": true,
  "ignorePatterns": ["!**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.mts", "*.ts"],
      "extends": [
        "plugin:@nx/typescript", "eslint:recommended", "eslint-config-airbnb-typescript", "plugin:@typescript-eslint/recommended",
         "plugin:@typescript-eslint/recommended-requiring-type-checking", "plugin:prettier/recommended", "plugin:import/errors",
         "plugin:import/warnings", "plugin:import/typescript", "plugin:react/recommended", "plugin:jsx-a11y/recommended"],
      "rules": {
        "@typescript-eslint/no-inferrable-types": 0,
        "@typescript-eslint/no-extra-semi": "error",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/no-explicit-any": "error",
        "no-extra-semi": "off",
        "no-reserved-keys": "off"
      },
      "parserOptions": {
        "sourceType": "module", 
        "project": "tsconfig.base.json"
      }
    }
  ]
}
