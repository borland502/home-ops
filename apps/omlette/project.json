{
  "name": "@app/omlette",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "sourceRoot": "apps/omlette/src",
  "projectType": "application",
  "tags": ["type:app", "scope:omlette"],
  "targets": {
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint"
      },
      "cache": true
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "platform": "node",
        "outputPath": "dist",
        "format": [
          "esm"
        ],
        "bundle": true,
        "thirdParty": true,
        "main": "apps/omlette/src/main.mjs",
        "tsConfig": "apps/omlette/tsconfig.app.json",
        "assets": [
          "apps/omlette/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".mjs"
          }
        },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".mjs"
            }
          }
        }
      }
      },
      "cache": true
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/omlette/Dockerfile . -t omlette"
    }
  }
}
