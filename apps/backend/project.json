{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "outputs": ["{options.outputPath}"],
      "command": "npx tsx scripts/build/build-backend.mjs --entry=apps/backend/src/main.mts",
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test": {},
    "serve": {
      "outputs": ["{options.outputPath}"],
      "command": "node dist/apps/backend/main.js"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.mts"],
        "format": "stylish",
        "eslintConfig": "apps/backend/.eslintrc.json",
        "fix": true
      },
      "cache": true,
      "dependsOn": ["^nx-stylelint:lint"]
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.css"],
        "formatter": "github"
      },
      "cache": true
    }
  }
}
