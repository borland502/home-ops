{
  "name": "watchyourlan-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/watchyourlan-api/src",
  "projectType": "application",
  "tags": [],
  "targets":
  {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "outputPath": "dist/apps/watchyourlan-api",
        "main": "apps/watchyourlan-api/src/main.mjs",
        "tsConfig": "apps/watchyourlan-api/tsconfig.app.json",
        "assets": ["apps/watchyourlan-api/*.md"],
        "bundle": true,
        "deleteOutputPath": true,
        "generatePackageJson": true,
        "thirdParty": false
      },
      "cache": true,
      "esbuildOptions": {
        "target": "es2020",
        "format": "cjs",
        "platform": "node",
        "banner": {
          "js": "import { createRequire } from 'module';const require = createRequire(import.meta.url);"
        },
        "packages": "external"
      }
    },
    "serve": {
      "outputs": ["{options.outputPath}"],
      "command": "npx tsx dist/apps/watchyourlan-api/main.js",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/watchyourlan-api/**/*.mts"],
        "format": "stylish",
        "fix": true
      },
      "cache": true,
      "dependsOn": ["^nx-stylelint:lint","^build"]
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/watchyourlan-api/**/*.css"],
        "formatter": "github"
      },
      "cache": true
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/watchyourlan-api/Dockerfile . -t watchyourlan-api"
    }
  }
}
