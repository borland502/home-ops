{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "es2022",
    "module": "ESNext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@technohouser/eslint": ["libs/tools/eslint/src/index.mts"],
      "@technohouser/log": ["libs/shared/log/src/index.mts"],
      "@technohouser/pkg-install": ["libs/shared/pkg-install/src/index.mts"],
      "@technohouser/utils": ["libs/shared/utils/src/index.mts"],
      "@technohouser/zx-utils": ["libs/shared/zx-utils/src/index.mts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "files": ["**/*.mts", "**/*.ts"]
}
