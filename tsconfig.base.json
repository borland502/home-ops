{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "customConditions": ["module"],
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "apps/watchyourlan-api/src/**/*.mts",
    "libs/watchyourlan-api/src/index.mts",
    "libs/watchyourlan-api/src/**/*.mts",
    "libs/shared/zx-utils/src/index.mts",
    "libs/shared/zx-utils/src/**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "**/.eslintrc",
    "**/.eslintrc.*"
  ]
}
