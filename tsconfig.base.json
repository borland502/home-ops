{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@technohouser/shared": [
        "libs/shared/src/index.mts"
      ],
      "@technohouser/watchyourlan-api-lib": [
        "libs/watchyourlan-api/src/index.mts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}
