{
  "name": "@pylib/resources",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "pylibs/resources/resources",
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  },
  "tags": [],
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "pylibs/resources"
      },
      "cache": true
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "dependsOn": [
        "lint",
        "lock",
        "install"
      ],
      "options": {
        "outputPath": "pylibs/resources/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "test": {
      "command": "poetry run python -m unittest discover",
      "options": {
        "cwd": "pylibs/resources"
      },
      "dependsOn": [
        "build"
      ],
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      },
      "dependsOn": [
        "^lock"
      ],
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": [
          "resources",
          "tests"
        ]
      },
      "cache": true
    }
  }
}
