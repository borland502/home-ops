{
  "name": "@app/scripts",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "sourceRoot": "scripts/zx",
  "projectType": "application",
  "tags": [
    "type:app",
    "scope:scripts"
  ],
  "targets": {
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint"
      },
      "cache": true
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install",
        "cwd": "scripts/zx"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "platform": "node",
        "outputPath": "dist",
        "format": [
          "esm"
        ],
        "bundle": true,
        "thirdParty": true,
        "main": "scripts/zx/main.mjs",
        "tsConfig": "scripts/zx/tsconfig.app.json",
        "assets": [
          "scripts/zx/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".mjs"
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "generateLockfile": true,
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".mjs"
              }
            }
          }
        }
      },
      "cache": true
    }
  }
}
