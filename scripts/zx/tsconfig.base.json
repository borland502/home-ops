{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@technohouser": ["."],
      "@technohouser/shared": ["shared/src"],
      "@technohouser/shared/*": ["shared/src/*"]
    },
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "."
  },
  "include": ["**/*.mts"],
  "exclude": ["node_modules", "build"]
}
