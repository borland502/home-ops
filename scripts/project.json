{
  "name": "scripts",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "scripts",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "backend:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "scripts:build:development"
        },
        "production": {
          "buildTarget": "scripts:build:production"
        }
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "scripts/main.mts",
        "outputPath": "dist/scripts",
        "outputFileName": "main.mjs",
        "tsConfig": "scripts/tsconfig.app.json",
        "assets": [],
        "platform": "node",
        "esbuildOptions": {
          "outdir": "dist/apps/backend",
          "outExtension": ".js=.mjs"
        }        
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    }
  }
}
